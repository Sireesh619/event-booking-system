<h1>Edit Event</h1>

<%= form_with model: @event, url: api_v1_event_path(@event), method: :pupatcht, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, value: @event.name %>
  </div>
  <div>
    <%= form.label :date %>
    <%= form.date_field :date, value: @event.date %>
  </div>
  <div>
    <%= form.label :venue %>
    <%= form.text_field :venue, value: @event.venue %>
  </div>
  <%= form.submit 'Update Event', class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back to Events', api_v1_events_path, class: 'btn btn-secondary' %>