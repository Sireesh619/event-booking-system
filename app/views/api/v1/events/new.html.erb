<h1>Create New Event</h1>

<%= form_with model: @event, url: api_v1_events_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>
  <div>
    <%= form.label :venue %>
    <%= form.text_field :venue %>
  </div>
  <%= form.submit 'Create Event', class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back to Events', api_v1_events_path, class: 'btn btn-secondary' %>