<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #343a40; padding: 20px;">
  <div style="background: #ffffff; padding: 40px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); width: 100%; max-width: 400px;">
    <h2 style="text-align: center; margin-bottom: 30px; color: #343a40;">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field" style="margin-bottom: 20px;">
        <%= f.label :email, style: "display: block; margin-bottom: 10px; color: #495057;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 95%; padding: 10px; border: 1px solid #ced4da; border-radius: 4px;" %>
      </div>

      <div class="field" style="margin-bottom: 20px;">
        <%= f.label :password, style: "display: block; margin-bottom: 10px; color: #495057;" %>
        <%= f.password_field :password, autocomplete: "current-password", style: "width: 95%; padding: 10px; border: 1px solid #ced4da; border-radius: 4px;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field" style="margin-bottom: 20px; display: flex; align-items: center;">
          <%= f.check_box :remember_me, style: "margin-right: 10px;" %>
          <%= f.label :remember_me, style: "color: #495057;" %>
        </div>
      <% end %>

      <div class="actions" style="text-align: center; margin-top: 20px;">
        <%= f.submit "Log in", style: "background-color: #007bff; color: #ffffff; padding: 10px 16px; border: none; border-radius: 4px; cursor: pointer;" %>
      </div>
    <% end %>

    <div style="text-align: center; margin-top: 20px;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>